<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
  </head>
  <body>
    <h1>Are You Ready for the MySukan 2016?</h1>

    <form action="signup" method="POST">
	<div class="input-group">

		<input name="firstName" type="text" class="form-control" placeholder="name" aria-describedby="sizing-addon2">
		<br><br>
		<input name="university" id="university-input" type="text" class="form-control" placeholder="university" aria-describedby="sizing-addon2">
		<br>
	    <div class="result" id="result">
	    </div>
	</div>
    	<br><br>
    	<input type="submit" value="I'm Ready!">
    </form>

  </body>
</html>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script type="text/javascript">

// sign up
$(function() {

	// GET list of universities that match keyWords
	$('#university-input').keypress(function () {

		var keyWords = '';
		keyWords = $('#university-input').val();

		// TEST
		console.log('keyWords:');
		console.log(keyWords);

		if (keyWords.length >= 2) {

			$.ajax({
				type : 'GET',
				url : '/get-all-universities',
				data : {
					'keyWords' : keyWords
				},
				success : function (response) {
					console.log('/get-all-universities SUCCESS\n');
					console.log('response:');
					console.log(response);

					var universities = '';
					for (i in response) {
						if (i != response.length - 1)
							universities += response[i]['University of Andorra'] + ', ';
						else
							universities += response[i]['University of Andorra'];
					}

					$('#result').text(universities);
				},
				error : function (err) {
					console.log('/get-all-universities ERROR\n');
					console.log('err:');
					console.log(err);
				},
				dataType : 'json'
			});

		}

	});
});

</script>